---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
---

<body>
  <header>
    <nav></nav>
  </header>
  <main><h1>Mainy</h1></main>
  <aside>
    <nav>
      <ul>
        <li>
          <a href="/about">About</a>
        </li>
        <li>
          <a href="/blog">Blog</a>
        </li>
      </ul>
    </nav>
  </aside>
  <footer><h4>Footer</h4></footer>
</body>
<style>
  body > * {
    padding: 10px;
  }
  body {
    margin: 0px;
    display: grid;
    grid-template-rows: 0.5fr auto 0.5fr;
    grid-template-columns: 1fr 4fr;
    column-gap: 10px;
    width: 100vw;
    height: 100%;
  }
  header {
    background-color: brown;
    grid-area: 1/1/2/3;
  }
  main {
    background-color: white;
    grid-area: 2/2/3/3;
  }
  aside {
    background-color: blueviolet;
    grid-area: 2/1/3/2;
  }
  footer {
    background-color: black;
    color: white;
    grid-area: 3/1/4/3;
  }
</style>
