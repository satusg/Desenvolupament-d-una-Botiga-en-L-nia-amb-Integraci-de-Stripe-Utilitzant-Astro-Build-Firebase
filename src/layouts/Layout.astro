---
import Logout from "@/components/Authentication.astro";

// Definiendo las props con valores por defecto
const {
  primaryColor = "#333",
  secondaryColor = "#555",
  accentColor = "#ff6f61",
  backgroundColor = "rgb(240, 240, 240)",
  headerHeight = "clamp(60px, 10vw, 80px)",
  footerHeight = "80px",
  title = "Your Store | Home",
  description = "Your Store - The best place to shop online for your favorite products",
  keywords = "e-commerce, shop, online store, buy, products",
  author = "Store Name",
} = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content={author} />
    <meta name="robots" content="index, follow" />
    <title>{title}</title>
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap"
      rel="stylesheet"
    />
    <slot name="head" />
  </head>
  <body>
    <header>
      <input type="checkbox" id="menu-toggle" class="menu-toggle" />
      <label for="menu-toggle" class="menu-icon">&#9776;</label>
      <nav class="top-nav">
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/products">Shop</a></li>
          <li><a href="/about">About</a></li>
          <li><a href="/contact">Contact</a></li>
          <Logout />
        </ul>
      </nav>
    </header>
    <main>
      <h1>{title}</h1>
      <slot name="main" />
    </main>
    <footer>
      <nav>
        <ul>
          <li><a href="/privacy">Privacy Policy</a></li>
          <li><a href="/terms">Terms & Conditions</a></li>
          <li><a href="/contact">Contact Us</a></li>
        </ul>
      </nav>
      <p>&copy; 2024 {author}. All rights reserved.</p>
    </footer>
  </body>
</html>
<style
  is:global
  define:vars={{
    primaryColor,
    secondaryColor,
    accentColor,
    backgroundColor,
    headerHeight,
    footerHeight,
  }}
>
  :root {
    --container-width: 80%;
    --container-padding: 1rem;
  }
  h1 {
    text-align: center;
    margin: 0rem 1rem 1rem 1rem;
  }

  main {
    width: var(--container-width);
    padding: var(--container-padding);
    margin: 0 auto;
  }
  body {
    margin: 0;
    display: grid;
    grid-template-rows: var(--headerHeight) 1fr var(--footerHeight);
    width: 100vw;
    height: 100vh;
    font-family: "Inter", sans-serif;
    background-color: var(--backgroundColor);
  }

  .menu-toggle {
    display: none;
  }

  .menu-icon {
    display: none;
    font-size: 2rem;
    cursor: pointer;
    position: absolute;
    top: 10px;
    right: 10px;
    z-index: 1050;
  }
  header {
    overflow-x: hidden;
  }

  .top-nav {
    background-color: var(--primaryColor);
    backdrop-filter: blur(10px);
    padding: 1rem;
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    width: 100%;
    transition: transform 0.3s ease;
  }

  .top-nav ul {
    width: 80%;
    list-style: none;
    display: flex;
    padding: 0;
    margin: auto 0;
    justify-content: space-between;
  }
  .top-nav ul button {
    padding: 0.5rem 0;
  }
  .top-nav ul button {
    cursor: pointer;
    width: 100%;
    background-color: transparent;
    border: none;
  }
  .top-nal ul li {
    align-content: center;
  }
  .top-nav ul button,
  .top-nav ul li a {
    color: white;
    text-decoration: none;
    font-size: clamp(1rem, 2.5vw, 1.125rem);
    position: relative;
    padding: 0.5rem 0;
  }
  .top-nav ul button {
    padding: 0;
  }

  @media (max-width: 768px) {
    .menu-icon {
      display: block;
    }
    .top-nav {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      transform: translateY(-100%);
    }
    .top-nav ul {
      width: 80%;
      flex-direction: column;
      background-color: var(--primaryColor);
      transition: transform 0.3s ease;
    }
    .top-nav ul li {
      width: 100%;
      text-align: center;
    }
    .top-nav ul li a {
      display: block;
      width: 100%;
    }
    .menu-toggle:checked + .menu-icon + .top-nav {
      transform: translateY(0);
    }
  }
  footer {
    background-color: var(--primaryColor);
    color: white;
    padding: 1rem;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    font-size: clamp(0.875rem, 1.5vw, 1rem);
  }

  footer nav {
    margin-bottom: 0.5rem;
  }

  footer ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    justify-content: center;
  }

  footer ul li {
    margin: 0;
  }

  footer ul li a {
    color: white;
    text-decoration: none;
    padding: 0.5rem 1rem;
    transition: color 0.3s ease;
  }

  footer ul li a:hover {
    color: var(--accentColor);
  }

  footer p {
    margin: 0.5rem 0 0;
    font-size: 0.875rem;
  }

  @media (max-width: 768px) {
    footer {
      padding: 1.5rem 0.5rem;
    }

    footer ul {
      flex-direction: column;
      gap: 0.5rem;
    }
  }
</style>
