---
import Logout from "@/components/Authentication.astro";
---

<body>
  <header>
    <nav>
      <ul>
        <li><Logout /></li>
      </ul>
    </nav>
  </header>
  <main>
    <slot name="main" />
  </main>
  <aside>
    <nav>
      <ul>
        <li>
          <a href="/about">About</a>
        </li>
        <li>
          <a href="/blog">Blog</a>
        </li>
      </ul>
    </nav>
  </aside>
  <footer>
    <h4>Footer Content</h4>
  </footer>
</body>

<style>
  body {
    margin: 0;
    display: grid;
    grid-template-rows: auto 1fr auto;
    grid-template-columns: 1fr 4fr;
    column-gap: 10px;
    width: 100vw;
    height: 100vh;
    font-family: Arial, sans-serif;
  }
  header {
    background-color: brown;
    grid-area: 1 / 1 / 2 / 3;
    padding: 10px;
    color: white;
  }
  main {
    background-color: white;
    grid-area: 2 / 2 / 3 / 3;
    padding: 10px;
  }
  aside {
    background-color: blueviolet;
    grid-area: 2 / 1 / 3 / 2;
    padding: 10px;
    color: white;
  }
  footer {
    background-color: black;
    color: white;
    grid-area: 3 / 1 / 4 / 3;
    padding: 10px;
    text-align: center;
  }
  nav ul {
    list-style-type: none;
    margin: 0;
    padding: 0;
    display: flex;
    gap: 10px;
  }
  nav ul li {
    margin: 0;
  }
  nav ul li a {
    color: inherit;
    text-decoration: none;
  }
</style>
